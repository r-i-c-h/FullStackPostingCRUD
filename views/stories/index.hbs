<h1>Stories</h1>

<div class="row">
  <!-- 'user' outside of the `each` is the logged in user. Within the each it is the story's user -->
  <!-- hence the ""../user" -->
  {{#each stories}}
  <div class="col s12 m4">
    <div class="card">
      <div class="card-image">
        {{{editIcon user ../user _id true}}}
      </div>
      <div class="card-content center-align">
        <h5>{{title}}</h5>
        <p>{{stripTags (truncate body 100)}}</p>
        <br>
        <div class="chip">
          <img src="{{user.image}}" alt="user image">
          <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
        </div>
      </div>
      <div class="card-action center-align">
        <a href="/stories/{{_id}}" class="btn grey">Read More...</a>
      </div>
    </div>
  </div>
  {{else}}
  <p>No posts to display found in database archives</p>
  {{/each}}
</div>